<article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h2>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= question.body %>
        </p>
      </section>

      <%= link_to 'Show', question_path(question), class: 'btn btn-primary custom-btn-size' %> 
      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary custom-btn-size' %>
      <%= link_to 'Delete', question_path(question), 
                            data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, 
                            class: 'btn btn-danger custom-btn-size' %>
    </div>
  </article>